.container{
  width: 100%;
  height: 100%;
}

.table{
  /* height: 740rpx; */
  padding: 14rpx;
  position: fixed;
  top: 94rpx;
  z-index: 9;
  width:96%;
}

/* 头部导航 */
.title{
  width: 100%;
  height: 100rpx;
  background-color: #fff;
  border-radius: 15rpx;
  box-shadow: 0 2px 10px #dcdbdb; 
  display: flex;
  flex-direction: row;
}
 
.title_t{
  width: 50%;
  height: 100%;
  display: flex;
  flex-direction: row;
  justify-content: center;
  align-items: center;
}

/* 导航 */
.t_tab{
  width: 114rpx;
  height: 100%;
  text-align: center;
  font-size: 28rpx;
  color: #999999;
  line-height: 100rpx;
}

/* 导航选中 */
.t_select{
  color: #ff6a00;
  border-bottom:2px solid #ff6a00; 
}

/* 滚动条 */
.scroll-v{
  width: 100%;
  height: auto;
  min-height: 500rpx;
  z-index: 1;
   margin-top: 30rpx;
  
}

/* 订单页 */
.order_v{
  height: auto;
  min-height: 500rpx;
  background-color: #fff;
  border-radius: 15rpx;
  margin-bottom: 15rpx;
  box-shadow: 0 2px 10px #dcdbdb;
  padding: 20rpx;
}

/* 订单日期 */
.order_date{
  font-size: 30rpx;
  color: #ff6a00;
}

/* 订单信息 */
.order_info{
  height: 300rpx;
  background-color: #f8f8f8;
  border-radius: 15rpx;
  margin-top: 15rpx;
  padding: 20rpx;
}

/* 详情时间 */
.info_time{
  height: 50rpx;
  width: 100%;
  display: flex;
  flex-direction: row;
  justify-content: space-between;
  border-bottom: 1rpx solid #e4e4e4;
}

/* 字体 */
.info_font{
  font-size: 30rpx;
  font-weight: bold;
}

/* 信息详情 */
.info_detail{
  width: 100%;
  display: flex;
  padding-top: 20rpx;
  flex-direction: column;
}

/* 图片 */
.info_item{
  margin-top: 20rpx;
  display: flex;
  flex-direction: row;
  justify-content: flex-start;
  align-items: center;
}

/* 等商品 */
.item_text{
  position: absolute;
  right: 40rpx;
}

/* 商品图片 */
.item_img{
  width: 100rpx;
  height: 100rpx;
  margin-right: 10rpx;
}

/* 尾行 */
.info_bottom{
  display: flex;
  flex-direction: row;
  margin-top: 30rpx;
  justify-content: space-between;
  align-items: baseline;
}

/* 订单编号 */
.bottom_no{
  font-size: 24rpx;
  color: #999999;
}

/* 详情按钮 */
.bottom_btn{
  width: 130rpx;
  height: 46rpx;
  background-color: #ff9400;
  border-radius: 20rpx;
  color: #fff;
  text-align: center;
  line-height: 46rpx;

}

/* 已确认 */
.order_2{
    display: flex;
    flex-direction: row;
    justify-content: space-between;
}