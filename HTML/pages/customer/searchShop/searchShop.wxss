page{
  background-color: #fff;
}

.container{
  width: 100%;
  height: 100%;
  background-color: #fff;
}

/* 搜索头部 */
.search_top{
  padding: 20rpx;
  height: 60rpx;
  border-bottom: 1rpx solid #c2c2c26b;
  display: flex;
  flex-direction: row;
  justify-content: space-around;
  align-items: center;
  background-color: #f6f6f6;
}

/* 搜索外部框 */
.input_v{
  width: 80%;
  height: 60rpx;
  background-color: #fff;
  border-radius: 40rpx;
  padding: 0 10rpx;
  display: flex;
  flex-direction: row;
  align-items: center;
}

/* 搜索 */
.search_text{
  font-size: 32rpx;
}

/* 搜索图片 */
.search_pic{
  width: 40rpx;
  height: 40rpx;
}

/* 关闭图片 */
.close_pic{
  width: 35rpx;
  height: 35rpx;

}

/* 搜索框 */
.search_input{
  width: 90%;
  height: 100%;
  margin-left: 10rpx;
  font-size: 32rpx;
}

.placeholderClass{
  font-size: 30rpx;
}

/* 餐厅item */
.shopItem{
  padding: 20rpx;
  height: 100rpx;
  border-bottom: 1rpx solid #d4d4d4;
  display: flex;
  flex-direction: column;
  justify-content: space-around;
}

/* 餐厅名 */
.shopName{
  font-size: 34rpx;
  font-weight: bold;
}

/* 餐厅地址 */
.shopAddr{
  font-size: 30rpx;
  color: #c9c9c9;
}