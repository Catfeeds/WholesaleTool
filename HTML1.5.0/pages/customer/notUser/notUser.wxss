.container{
  width: 100%;
  height: 100%;
}

.table{
  height: 740rpx;
  padding: 14rpx;
  position: relative;
  top: 190rpx;
  z-index: 9;
}

/* 头部导航 */
.title{
  min-height: 646rpx;
  height:auto;
  background-color: #fff;
  border-radius: 15rpx;
  box-shadow: 0 2px 10px #dcdbdb; 
  padding: 20rpx;
  display: flex;
  flex-direction: column;
  text-align: center;
}
 
 /* 单选 */
.radio_group{
  display: flex;
  flex-direction: row;
}

.radio{
  width: 50%;
  text-align: center;
  transform:scale(0.8);
  font-size: 30rpx;
}

.btn{
  width: 100%;
  height: 70rpx;
  text-align: center;
  border-radius: 15rpx;
  color: #fff;
  font-size: 28rpx;
  line-height: 70rpx;
  box-shadow: 0 2px 10px #dcdbdb; 
}

.btn_2{
  background-color: #ff9700;
  margin-top: 30rpx;
}

/*  */
.placeholder-input{
  font-size: 26rpx;
  color: #999999;
  text-align: left;
  letter-spacing: 1px;
}

.input_class{
  font-size: 26rpx;
  height: 80rpx;
  text-align: left;
  border-bottom: 1rpx solid #d8d8d8;
  padding: 0 20rpx;
}

/* 职业选择 */
.picker{
  line-height: 80rpx;
  justify-content:flex-start;
}

/* 餐厅标题 */
.shopTitle{
  margin-top: 20rpx;
  margin-left: 20rpx;
}

/* 餐厅切换 */
.shopSwitch{
  width: 100%;
  height: 100%;
  display: flex;
  flex-direction: row;
  justify-content: center;
  align-items: center;
}

/* 切换item */
.title_t{
  width: 50%;
  height: 100%;
  display: flex;
  flex-direction: row;
  justify-content: center;
  align-items: center;
}

/* 导航 */
.t_tab{
  width: 114rpx;
  height: 100%;
  text-align: center;
  font-size: 28rpx;
  color: #999999;
  line-height: 100rpx;
}

/* 导航选中 */
.item_select{
  border-bottom:2px solid #ff6a00; 
}

/* 文字选中 */
.t_select{
  color: #ff6a00;
}

/* 电话输入行 */
.input_phone{
  display: flex;
  flex-direction: row;
  justify-content: space-between;
  align-items: center;
}

/* 电话输入 */
.phone_in{
  width: 300rpx;
}

/* 获取验证码 */
.phone_btn{
  width: 154rpx;
  height: 50rpx;
  background-color: #ff9000;
  border-radius: 15rpx;
  text-align: center;
  color: #fff;
  font-size: 24rpx;
  line-height: 50rpx;
}


.picker_v{
  border: none;
}

.picker_in{
  width: 100rpx;
}

/* 人均消费行 */
.avg_cons{
  display: flex;
  flex-direction: row;
  align-items: center;
  border: none;
  color: #999999;
}

.cons_text{
  letter-spacing: 1px;
}

/* 人均消费输入 */
.cons_input{
    text-align: center;
}

.cons_input{
  width: 200rpx;
}


/* *********************** */
.region-select{
  width: 100%;
  height: 600rpx;
  background: #fff;
  position: fixed;
  z-index: 10;
  left:0;
  bottom: 0;
}

.region-select .hd{
  height: 108rpx;
  border-bottom: 1px solid #f4f4f4;
  padding: 46rpx 30rpx 0 30rpx;
}

.region-select .region-selected{
  float: left;
  height: 60rpx;
  display: flex;
}

.region-select .region-selected .item{
  max-width: 140rpx;
  margin-right: 30rpx;
  text-align: left;
  line-height: 60rpx;
  height: 100%;
  color: #333;
  font-size: 28rpx;
  overflow: hidden;
      text-overflow: ellipsis;
    white-space: nowrap;
}

.region-select .region-selected .item.disabled{
  color: #999;
}

.region-select .region-selected .item.selected{
  color: #ff6a00;
}

.region-select .done{
  float: right;
  height: 60rpx;
  width: 60rpx;
  border: none;
  background: #fff;
  line-height: 60rpx;
  text-align: center;
  color: #333;
  font-size: 28rpx;
}

.region-select .done.disabled{
  color: #999;
}



.region-select .bd{
  height: 492rpx;
  padding: 0 30rpx;
}

.region-list{
  width: 100%;
  height: 100%;
  line-height: 104rpx;
  text-align: left;
  color: #333;
  font-size: 28rpx;
}

.region-select .item{
  height: 104rpx;
  line-height: 104rpx;
  text-align: left;
  color: #333;
  font-size: 28rpx;
}

.region-select .region-list .item.selected{
  color: #ff6a00;
}


.bg-mask{
  height: 100%;
  width: 100%;
  background: rgba(0, 0, 0, 0.4);
  position: fixed;
  top:0;
  left:0;
  z-index: 8;
}
