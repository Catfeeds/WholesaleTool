.container{
  width: 100%;
  height: 100%;
}

.table{
  height: 740rpx;
  padding: 14rpx;
  position: relative;
  top: 188rpx;
  z-index: 9;
}

/* 头部导航 */
.title{
  height: 845rpx;
  background-color: #fff;
  border-radius: 15rpx;
  box-shadow: 0 2px 10px #dcdbdb; 
  padding: 20rpx;
  display: flex;
  flex-direction: column;
  justify-content: space-around;
}
 
 


/* 底部按钮 */
.bottom_btn{
  width: 100%;
  height: 100rpx;
  position: fixed;
  bottom: 0rpx;
  background-color: #fff;
  z-index: 9;
  box-shadow: 0 2px 10px #dcdbdb; 
  display: flex;
  flex-direction: row;
  justify-content: space-between;
  align-items: center;
}

/* 按钮图片 */
.btn_back{
  width: 60rpx;
  height: 60rpx;
  margin-left: 50rpx;
}

/* 确认拒绝行 */
.yn_row{
  display: flex;
  flex-direction: row;
}

/*  */
.btn_yn{
  width: 35rpx;
  height: 35rpx;
}

.yn_v{
  display: flex;
  flex-direction: column;
  background-color: #fff;
  border: none;
  align-items: center;
  justify-content: center;

}

/* 备注文字 */
.remark_text{
  font-size: 26rpx;
  color: #999999;
  line-height: 40rpx;
}

.title_border{
  width: 500rpx;
  height: 500rpx;
  margin: 0 auto;
  background-color: #539cff;
  background: -webkit-gradient(linear, left top, right bottom, color-stop(0%,#ff9700), color-stop(100%,#ff6a00));
  padding: 30rpx;
}

.title_txt{
    font-size: 36rpx;
    font-weight: bold;
    text-align: center;
}

.title_qrcode{
  width: 100%;
  height: 100%;

}