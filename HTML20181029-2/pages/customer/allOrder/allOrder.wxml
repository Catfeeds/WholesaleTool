<view class='container'>
    <!-- 头部背景 -->
    <view class="title_bg">
      <image src='/static/images/logo.png' class="title_bgPic"></image>
      <view class="title_bgName">{{ superInfo.name }}</view>
    </view>

    <image class="image" src='/static/images/juxing.png'/>
    <image class="clearStorage" bindtap="clearStorage" data-supplier_id="{{superInfo}}" data-supplier_name=""  src='/static/images/clearStorage2.png' />
    
    <view class="table">
      <!-- 头部导航 -->
      <view class="title">
       <view class="title_t" wx:for="{{titleLable}}" wx:for-item="titleItem" wx:for-index="titleIndex">
          <view class="t_tab {{ status==titleItem.status?'t_select':'' }}" data-status="{{ titleItem.status }}" bindtap='changeStatus'>{{ titleItem.name }}</view>
       </view>
      </view>

       <!-- 主体 -->
      <scroll-view class="scroll-v" scroll-y style="height: {{ scrollHeight }}px;" >
        <!-- 订单 -->
        <!-- 订单详情 -->
        <navigator url="/pages/customer/orderDetail/orderDetail?orderId={{ it.id }}" class="order_v" wx:for="{{ orderList }}" wx:for-item="it" wx:for-index="i">
          <view class="info_time">
              <view class="info_font">{{ it.created_at }}</view>
              <view class="info_font">{{ nameArr[it.order_status] }}</view>
          </view>
          <view class="info_detail">
              <view class="order_2">
                <view class="info_font">{{ item.restaurant_name||"" }}</view>
                <view class="info_font" wx:if="{{ it.order_status==2 }}">合计：<text style="color:#ff0000">￥{{ it.order_amount }}</text></view>
              </view>
              
              <view class="info_item" wx:if="{{ it.order_type=='0' }}">
                  <image class="item_img" wx:if="{{j<4}}" src="{{ pro.uploaded_img||'/static/images/defaule.png' }}" wx:for="{{ it.product_list }}" wx:for-item="pro" wx:for-index="j"  data-pindex="{{ i }}" data-index="{{ j }}" binderror="iconError" mode="aspectFill"></image>
                  <text class="info_font" wx:if="{{ it.product_list.length>4 }}">......</text>
                  <text class="info_font item_text">共{{ it.product_list.length}}个商品</text>
              </view>
              <view class="info_item" wx:else>
                  <image class="item_img" wx:if="{{j<4}}" src="{{ pro||'/static/images/defaule.png' }}" wx:for="{{ it.product_list }}" wx:for-item="pro" wx:for-index="j"  data-pindex="{{ i }}" data-index="{{ j }}" binderror="iconError" mode="aspectFill"></image>
                  <text class="info_font" wx:if="{{ it.product_list.length>4 }}">......</text>
                  <text class="info_font item_text">等{{ it.product_list.length}}张图片</text>
              </view>
          </view>
          <!-- 订单号 -->
          <view class="info_bottom">
              <view class="bottom_no">订单编号:{{ it.order_number }}</view>
              <view class="bottom_no bottom_btn" >查看详情</view>
          </view>  
        </navigator>

      </scroll-view>
        <!-- 底部消息 -->
      <bottomMsg my-class="bottomMsgClass"></bottomMsg>
    </view>

    <!-- 按钮 -->
    <view class="bottom_menu">
      <!-- 新建订单 -->
      <navigator class="menu_nav" url='/pages/customer/newOrder/newOrder'>
          <image class="nav_img" src="/static/images/new.png"></image>
          <text>新建订单</text>
      </navigator>
      <!-- 全部订单 -->
      <view class="menu_nav">
          <image  class="nav_img" src="/static/images/all_selected.png"></image>
          <text style="color:#ff9700">全部订单</text>
      </view>
    </view>

</view>