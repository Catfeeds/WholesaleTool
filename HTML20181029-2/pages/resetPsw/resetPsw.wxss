/* pages/resetPsw/resetPsw.wxss */
.container{
    width: 100%;
    height: 100%;
  }
  
  .table{
    height:740rpx;
    padding:14rpx;
    position:relative;
    top:70rpx;  
  }
  
  .form{
    height: 100%;
    background-color: #fff;
    border-radius: 10rpx;
    box-shadow: rgb(233, 233, 233) 3rpx 3rpx 2rpx 1rpx ;
    padding: 92rpx 40rpx;
  }
  
  /* 输入框v */
  .table_inp{
    height: 74rpx;
    background-color: #f5f5f5;
    border-radius: 40rpx;
    margin-bottom: 40rpx;
    display: flex;
    flex-direction: row;
    padding: 5rpx 40rpx;
    align-items: center;
  }
  
  /* 图标 */
  .icon{
    width: 40rpx;
    height: 40rpx;
  }
  
  /* 输入框 */
  .input{
    width: 100%;
    height: 100%;
    margin-left: 30rpx;
  }
  .input_code{
    width: 50%
  }
  .placeholder{
    font-size: 32rpx;
    letter-spacing: 1px;
    color: #999999;
  }
  
  /* 忘记密码 */
  .forgit_pas{
    font-size: 24rpx;
    color: #999999;
    letter-spacing: 1px;
  }
  
  /* 登陆按钮 */
  .login{
    height: 74rpx;
    background-color: #ff9700;
    border-radius: 40rpx;
    margin-top: 200rpx;
    padding: 5rpx 40rpx;
    text-align: center;
    color: #fff;
    line-height: 74rpx;
    font-size: 36rpx;
    letter-spacing: 1px;
  }
  
  .login::after{
    border: none;
  }
  .sendCode{
    background-color:#ff9700;
    border-radius:40rpx;
    padding:5rpx 40rpx;
    align-items:center;
    font-size:25rpx;
    width:217rpx;
    position:fixed;
    right:50rpx;
    line-height:74rpx;
    color:#FFF;
    
    
  }
  
  .tip{
    font-size:30rpx;
    margin:0 0 20px 0;
  }