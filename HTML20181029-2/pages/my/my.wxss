.container{
  width: 100%;
  height: 100%;
}

.table{
  position: relative;
  top: 94rpx;
  overflow: hidden;
  padding: 14rpx;
}

/* 头部导航 */
.top{
  width: 100%;
  height: 100rpx;
  background-color: #fff;
  border-radius: 15rpx;
  box-shadow: 0 2px 10px #dcdbdb; 
  display: flex;
  flex-direction: row;
  margin-bottom: 20rpx;
}
 
.top_t{
  width: 50%;
  height: 100%;
  display: flex;
  flex-direction: row;
  justify-content: center;
  align-items: center;
}

/* 导航 */
.t_tab{
  width: 91%;
  height: 100%;
  text-align: center;
  font-size: 28rpx;
  color: #999999;
  line-height: 100rpx;
}

/* 导航选中 */
.t_select{
  color: #ff6a00;
  border-bottom:2px solid #ff6a00; 
}



/* 头部导航 */
.title{
  height: 130rpx;
  background-color: #fff;
  border-radius: 15rpx;
  box-shadow: 0 2px 10px #dcdbdb; 
  display: flex;
  flex-direction: column;
  margin-bottom: 20rpx;
  padding: 30rpx;
  justify-content: space-around;
  position: relative;
}

/* 头部导航 */
.title:after{
  position: absolute;
  top: 50%;
  right: 30rpx;
  margin-top: -3px;
  content: " ";
  display: inline-block;
  height: 12px;
  width: 12px;
  border-width: 2px 2px 0 0;
  border-color: #c8c8c8;
  border-style: solid;
  transform: rotate(45deg);
}

/* 名 */
.title_name{
  font-size: 32rpx;
  color: #000;
  font-weight: bold;
}

/* 名 */
.title_addr{
  font-size: 28rpx;
  color: #999999;
}

.menu{
  width: 180rpx;
  height: 150rpx;
  background-color: #fff;
  box-shadow: 0 2px 10px #dcdbdb; 
  position: fixed;
  z-index: 99999;
  right: 40rpx;
  bottom: 1rpx;
  display: flex;
  flex-direction: column;

}

.menu_it{
  text-align: center;
  font-size: 26rpx;
  color: #999999;
  height: 50%;
  line-height: 75rpx;
}

.menu_b{
  border-bottom: 1rpx solid #e0e0e0a1;
}

.menu_select{
  color:#ff6a00;
}

.qrcode_v{
  height: 733rpx;
  background-color: #fff;
  border-radius: 15rpx;
  box-shadow: 0 2px 10px #dcdbdb; 
  padding: 20rpx;
  display: flex;
  flex-direction: column;
  justify-content: space-around;
}

.title_txt{
    font-size: 36rpx;
    font-weight: bold;
    text-align: center;
}

.title_qrcode{
  width: 100%;
  height: 100%;
}


.title_border{
  width: 500rpx;
  height: 500rpx;
